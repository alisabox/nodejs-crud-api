    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
