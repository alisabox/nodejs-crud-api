{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API on vanilla Node.js",
  "main": "index.js",
  "scripts": {
    "start:dev": "npm-run-all --parallel watch:server watch:build",
    "start:multi": "npm-run-all --parallel watch:server watch:build --mode=multi",
    "start:prod": "webpack --config webpack.production.config.js && node prod/index.js",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon dist/index.js",
    "test": "jest"
  },
  "author": "Alisa Lobzhanidze",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "dotenv": "^16.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "prettier": "^2.7.0",
    "uuid": "^8.3.2"
  }
}
